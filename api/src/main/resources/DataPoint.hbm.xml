<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.openmrs.module.atomfeed">

	<class name="DataPoint"
		table="${project.parent.artifactId}_datapoint">
		<id name="id" type="int" column="id" unsaved-value="0">
			<generator class="native" />
		</id>
		<discriminator column="id" insert="false" />
		
		<property name="uuid" type="java.lang.String" column="uuid"
			length="38" unique="true" />
		
		<property name="creator" type="int" column="creator"
			length="11" />
			
		<property name="dateCreated" type="java.util.Date" column="date_created"
			length="11" />
		
		<property name="objectClass" type="java.lang.String" column="object_class"
			length="255" />
			
		<property name="atomFeedContent" type="java.lang.String" column="atom_feed_content"
			length="2048" />
		
	</class>

</hibernate-mapping>
